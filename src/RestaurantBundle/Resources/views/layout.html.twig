<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Application Restaurant{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('assets/vendor/bootstrap/dist/css/bootstrap.min.css') }}">
    </head>
    <body>
        <nav id="mainNav" class="navbar navbar-default navbar-fixed-top navbar-custom">
            <div class="container">
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <div id="sidebar">
                        {% block sidebar %}
                            <ul>
                                <li style="float:left;margin-left:50px;"><a href="/restaurants">Restaurant</a></li>
                                <li style="float:left;margin-left:50px;"><a href="/plats">Plat</a></li>
                                <li style="float:left;margin-left:50px;"><a href="/platType">Type de Plat</a></li>
                            </ul>
                        {% endblock %}
                    </div>
                </div>
            </div>
        </nav>


        <div id="content" style="padding-top:50px;">
            {% if app.session.flashbag.peekAll|length > 0 %}
                {% for type, messages in app.session.flashbag.all %}
                    {% for message in messages %}
                        <div class="flash-{{ type ? type : '' }}">
                            {{ message|trans({}, domain|default('messages')) }}
                        </div>
                    {% endfor %}
                {% endfor %}
            {% endif %}
            {% block content %}{% endblock %}
        </div>
    </body>
</html>
